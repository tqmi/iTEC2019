<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popup_edit_IV_Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_cancel_24px"
        android:backgroundTint="@color/colorSetUp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/popup_edit_LL_1"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/popup_edit_IV_Close"
        android:layout_marginTop="18dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_model"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_model"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:hint="@string/popup_edit_add_TIET_model_hint" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_company"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_company"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:hint="@string/popup_edit_add_TIET_company_hint" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:id="@+id/popup_edit_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_LL_1"
        />
    <LinearLayout
        android:id="@+id/popup_edit_LL_2"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_view_1">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_autonomy"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_autonomy"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="number"
                android:hint="@string/popup_edit_add_TIET_autonomy_hint" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_batteryLife"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_batteryLife"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="number"
                android:hint="@string/popup_edit_add_TIET_batteryLife_hint" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:id="@+id/popup_edit_view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_LL_2"
        />
    <LinearLayout
        android:id="@+id/popup_edit_LL_3"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_view_2">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_year"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_year"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="number"
                android:hint="@string/popup_edit_add_TIET_year_hint" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popup_edit_TIL_lastTechRevision"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColorHint="#000000"
            android:theme="@style/TextInputLayoutTheme"
            app:errorEnabled="true"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            app:errorTextAppearance="@style/error_appearance"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popup_edit_TIET_lastTechRevision"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:hint="@string/popup_edit_add_TIET_lastTechRevision_hint"
                android:focusable="false"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:id="@+id/popup_edit_view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_LL_3"
        />

    <LinearLayout
        android:id="@+id/popup_edit_LL_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/popup_edit_view_3">

        <Button
            android:id="@+id/popup_edit_BTN_edit_car"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_info_cancel"
            android:drawableStart="@drawable/ic_baseline_add_24px"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center|center_vertical"
            android:padding="12dp"
            android:singleLine="true"
            android:stateListAnimator="@animator/button_click_animator"
            android:text="@string/popup_edit_BTN_add"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        <Button
            android:id="@+id/popup_edit_BTN_remove_car"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/button_info_vote_down"
            android:drawableStart="@drawable/ic_baseline_cancel_24px"
            android:padding="12dp"
            android:singleLine="true"
            android:text="@string/popup_edit_BTN_remove"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_thin"
            android:textAllCaps="false"
            android:gravity="center|center_vertical"
            android:textSize="12sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:stateListAnimator="@animator/button_click_animator"/>
    </LinearLayout>
    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="@drawable/ic_car_book"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#10000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>